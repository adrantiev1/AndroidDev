<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drantiev.anton.canadiantest.MainActivity"
    >
    <LinearLayout
        android:id="@+id/difficulty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rock_climber"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your difficulty:"
            android:textSize="28sp"
            android:textColor="#fff"
            android:layout_marginTop="240sp"
            />
        <RadioGroup
            android:id="@+id/rg_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <RadioButton
                android:id="@+id/rb_easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Easy"
                android:checked="true"
                android:textSize="22sp"
                android:textColor="#fff"/>
            <RadioButton
                android:id="@+id/rb_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Medium"
                android:textSize="22sp"
                android:textColor="#fff"/>
            <RadioButton
                android:id="@+id/rb_hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hard"
                android:textSize="22sp"
                android:textColor="#fff"/>
        </RadioGroup>
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Continue"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How Canadian R you?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/transitions_container_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/home_android_canada"
        android:alpha="0.7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="The question?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_weight="0.02"
            android:padding="20dp">

            <RadioButton
                android:id="@+id/rb_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="radio button"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/rb_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="radio button" />

            <RadioButton
                android:id="@+id/rb_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="radio button" />

            <RadioButton
                android:id="@+id/rb_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="radio button" />
        </RadioGroup>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Next" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/transitions_container_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="answer"
            android:visibility="gone"
            android:textColor="#00ff00"
            android:textSize="18dp"/>


    </LinearLayout>


</RelativeLayout>
