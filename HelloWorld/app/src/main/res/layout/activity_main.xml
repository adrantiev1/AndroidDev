<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.nait.adrantiev1.helloworld.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/hello"
        android:textSize="25dp"
        android:textColor="@color/color_main_activity_title"


         />
    <EditText
        android:id="@+id/edittext_main"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_margin="5sp"
        android:hint="@string/hint_main_edittext"
        android:background="@color/color_edittext"/>
    <Button
        android:id="@+id/button_main_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="5sp"
        android:text="@string/button_submit_text"
        />
    <Button
        android:id="@+id/button_launch_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="5sp"
        android:text="@string/launch_activty_button"
        />

</LinearLayout>
