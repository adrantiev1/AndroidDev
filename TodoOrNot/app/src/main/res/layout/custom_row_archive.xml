<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/custom_row_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#ef1affdd"
        />
    <TextView
        android:id="@+id/custom_row_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/custom_row_title"
        android:textSize="12dp"
        android:textStyle="italic"
        android:textColor="#ef1aaaff"
        android:typeface="sans"
        />
    <TextView
        android:id="@+id/custom_row_flag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="12dp"
        android:textStyle="italic"
        android:textColor="#ef1aaaff"
        android:typeface="sans"
        />
    <TextView
        android:id="@+id/custom_row_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/custom_row_flag"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#ef1a6677"
        />

</RelativeLayout>